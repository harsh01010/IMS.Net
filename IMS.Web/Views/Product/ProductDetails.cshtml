@model ProductViewModel
<form method="post">
    <input asp-for="product.ProductId" hidden />
    <div class="container mt-4">
        <div class="card shadow border-0 bg-secondary text-light">
            
            <div class="card-header bg-primary text-light d-flex justify-content-between align-items-center rounded-0">
                <h1 class="mb-0">@Model.product.Name</h1>
                <h2 class="text-warning mb-0">@string.Format("{0:c}", Model.product.Price)</h2>
            </div>
           
            <div class="card-body">
                <div class="row">
                    <!-- Image section -->
                    <div class="col-12 col-lg-4 d-flex justify-content-center">
                        <img src="@Model.product.ImageUrl" class="img-fluid rounded" alt="@Model.product.Name" style="max-height: 300px; object-fit: cover;" />
                    </div>
                    <!-- Details section -->
                    <div class="col-12 col-lg-8">
                        <div class="mb-3">
                            <span class="badge bg-primary text-light p-3">@Model.product.CategoryName</span>
                            <p class="text-light pt-3 mt-3">@Html.Raw(Model.product.Description)</p>
                        </div>
                       
                    </div>
                </div>
            </div>
            <!-- Card footer -->
            <div class="card-footer bg-dark d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <!-- Back to List Button -->
                <div class="mb-2 mb-md-0 w-100 w-md-auto">
                    <a asp-action="ProductIndex" class="btn btn-outline-primary btn-lg w-100">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
                <!-- Add to Cart Button -->
                <div class="w-100 w-md-auto">
                    <input type="hidden" name="productId" value="@Model.product.ProductId" />
                    <button asp-controller="Cart" asp-action="CreateCart" asp-route-cartId="@Model.id" type="submit" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-cart"></i> Add to Cart
                    </button>
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
