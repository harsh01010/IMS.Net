@model ProductDto

<form asp-action="ProductEdit" enctype="multipart/form-data">
    <div class="container mt-4 p-4 bg-dark text-light rounded">
        <h1 class="text-center mb-4 bg-primary text-white rounded p-2">Edit Product</h1>

        <input type="hidden" asp-for="ProductId" />

        <div class="row">
            <!-- Image Column -->
            <div class="col-lg-4 col-md-12 d-flex justify-content-center align-items-start">
                <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" alt="Product Image" />
            </div>

            <!-- Form Column -->
            <div class="col-lg-8 col-md-12">
                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label fs-4">Name</label>
                        <input asp-for="Name" class="form-control bg-secondary text-light border-0 rounded" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label fs-4">Category Name</label>
                        <input asp-for="CategoryName" class="form-control bg-secondary text-light border-0 rounded" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label fs-4">Description</label>
                        <textarea asp-for="Description" class="form-control bg-secondary text-light border-0 rounded" rows="2"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label fs-4">Price</label>
                        <input asp-for="Price" class="form-control bg-secondary text-light border-0 rounded" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label fs-4">Image URL</label>
                        <input asp-for="ImageUrl" class="form-control bg-secondary text-light border-0 rounded" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12 col-md-6">
                            <a asp-action="ProductIndex" class="btn btn-outline-primary w-100">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                        <div class="col-12 col-md-6">
                            <input type="submit" value="Update" class="btn btn-success w-100" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
