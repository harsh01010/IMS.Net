@model IEnumerable<ProductDto>

<div class="container mt-4">
    <!-- Row to display the products -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 bg-secondary text-light">
                    <!-- Image with consistent height -->
                    <img src="@item.ImageUrl" class="card-img-top img-fluid" alt="@item.Name" style="height: 200px; object-fit: cover;" />

                    <div class="card-body d-flex flex-column">
                        <!-- Name and Price -->
                        <div class="mb-3">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text fs-5">@item.Price.ToString("c")</p>
                        </div>

                        <!-- Buttons at the bottom -->
                        <div class="mt-auto">
                            <a class="btn btn-info btn-sm" asp-action="ProductDetails" asp-route-productId="@item.ProductId">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
