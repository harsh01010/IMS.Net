@model IEnumerable<ProductDto>
<div class="container mt-4">
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3 d-flex align-items-stretch">
                <div class="card h-100 shadow border-0 bg-secondary">
                    <!-- Responsive image at the top -->
                    <img src="@item.ImageUrl" class="card-img-top img-fluid" alt="@item.Name" style="height: 180px; object-fit: cover;" />

                    <div class="card-body d-flex flex-column">
                        <!-- Name and Price aligned vertically -->
                        <div class="mb-3">
                            <h5 class="card-title text-light">@item.Name</h5>
                            <p class="card-text fs-5 text-light">@item.Price.ToString("c")</p>
                        </div>

                        <!-- Buttons at the bottom -->
                        <div class="mt-auto">
                            <a class="btn btn-success btn-sm me-2" asp-action="ProductEdit" asp-route-productId="@item.ProductId">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-danger btn-sm me-2" asp-action="ProductDelete" asp-route-productId="@item.ProductId">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a class="btn btn-info btn-sm" asp-action="ProductDetails" asp-route-productId="@item.ProductId">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
