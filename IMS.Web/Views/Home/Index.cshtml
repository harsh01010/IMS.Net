@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="display-4 mb-4 font-weight-bold text-light">Welcome to Our E-Commerce Store</h1>
            @if (!User.Identity.IsAuthenticated)
            {
            <p class="lead text-light">Please log in or register to continue.</p>
                <div class="d-flex justify-content-center mt-4">
                    <a href="Auth/Login" class="btn btn-light btn-lg mr-3">Login</a>
                <a href="Auth/Register" class="btn btn-outline-light btn-lg">Register</a>
            </div>
            }
        </div>
    </div>
</div>
